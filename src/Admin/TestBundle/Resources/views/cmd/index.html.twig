{% extends '::base.html.twig' %}


{% block body -%}
    <!-- WEB FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800&amp;subset=latin,latin-ext,cyrillic,cyrillic-ext" rel="stylesheet" type="text/css" />

    <!-- CORE CSS -->
    <link href="{{ asset('plugins/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />

    <!-- CSS DATATABLE -->
    <link href="{{ asset('css/layout-datatable.css') }}" rel="stylesheet" type="text/css" />

    <!-- THEME CSS -->
    <link href="{{ asset('css/essentials.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/layout.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/color_scheme/green.css') }}" rel="stylesheet" type="text/css" id="color_scheme" />

    <!-- JQGRID TABLE -->
    <link href="{{ asset('plugins/jqgrid/css/ui.jqgrid.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/layout-jqgrid.css') }}" rel="stylesheet" type="text/css" />

    <h1>Liste Des Commandes</h1>

    <!-- Recuperation du Boutton Ajouter  -->
    {{ render(controller('Admin\TestBundle:cmd:new')) }}

    <!-- Right option -->
    <div class="btn-group pull-right tabletools-topbar">
        <a class="btn btn-sm btn-default DTTT_button_pdf" id="ToolTables_sample_1_0">
            <span>PDF</span>
            <div style="position: absolute; left: 0px; top: 0px; width: 45px; height: 32px; z-index: 99;">
