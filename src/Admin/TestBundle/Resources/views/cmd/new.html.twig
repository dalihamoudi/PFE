{% block body -%}
    <button type="button" style="position: absolute;left: 85%;top: 11%;" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg1">Ajouter CMD</button>


    <div class="modal fade bs-example-modal-lg1" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg1">
            <div class="modal-content">

                <!-- header modal -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <!-- body modal -->
                <div class="modal-body">
                    <center><h1>Creation CMD</h1></center>
                    {{ form_start(form) }}
                    <p>
                        <center>
                        <div>
                            <label>Date</label>
                            {{ form_widget(form.pFCMDPHDate, {'attr': {'class': ''}}) }}
                        </div>
                        </center>
                        <div>
                            <label>Client</label>
                            {{ form_widget(form.client, {'attr': {'class': 'form-control pointer required'}}) }}
                        </div>
                        <div>
                            <label>Delegue</label>
                            {{ form_widget(form.delgues, {'attr': {'class': 'form-control pointer required'}}) }}
                        </div>
                        <p>
                        <div>
                            <table id="TableProduit" class="table table-striped table-bordered table-hover">
                                <tr class="ui-jqgrid-labels">
                                    <td>Produit</td>
                                    <td>Quantité</td>
                                    <td>Gadget</td>
                                    <td>Quantité</td>
                                    <td>
                                            <a href="#" class="glyphicon glyphicon-plus">Add</a><br>
                                            <a href="#" class="glyphicon glyphicon-minus">Remove</a>
                                    </td>
                                </tr>
                                <tr id="ligne">
                                    <td></td>
                                    <td>aaaaaaaaaaaa</td>
                                    <td>bbbbbbbbbbbbbb</td>
                                    <td>bbbbbbbbbbbb</td>
                                    <td>cccccccccccccc</td>
                                </tr>
                            </table>
                        </div>
                        <center>
                            <p>
                        <div>

                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                            </p>
                        </center>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}

                </div>

            </div>
        </div>
    </div>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js"></script>

    <script>

        /* add pizzas */

        var add = function() {

            var index = $('table tbody tr').length + Math.floor((Math.random() * 100) + 1);
            var row = $('script[type="text/html"]').text().replace(/__name__/g, index%2==0?index++:index--);
            $('#NvRow').append(row);

        };

        $('table tbody a').live('click', function(event) {

            if ($(this).text() === "Add") {

                add();

            }

            if ($(this).text() === "Remove") {

                $(this).closest('tr').remove();

            }

            event.preventDefault();

        });

        if ($('table tbody tr').length === 0) {

            add();

        }
    </script>
{% endblock %}

